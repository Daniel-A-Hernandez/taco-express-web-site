import { ShoppingCart } from "@lucide/astro";
---
<!--Navegacion -->
<nav class="hidden md:flex items-center space-x-8 text-sm font-semibold text-stone-600">
    <a href="#menu-section" class="hover:text-orange-600 transition-colors">Menú</a>
    <a href="#ubicanos" class="hover:text-orange-600 transition-colors">Ubícanos</a>
