---
import {Image} from 'astro:assets';
import logo from '@/assets/logo-tacoexpress.png';
import Navbar from '@/components/structure/Navbar.astro';
---




 <!-- HEADER -->
    <header class="sticky top-0 z-40 bg-white shadow-md border-b border-orange-100">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
            <!-- Logo y Nombre -->
            <div class="flex items-center space-x-3">
                <Image
                src={logo}
                alt="Logo taco express" 
                class="w-15 h-15 object-contain" 
                id="main-logo"
                priority
                />
                <div>
                    <h1 class="text-xl font-bold text-orange-900 leading-none">Taco Express</h1>
                    <p class="text-[10px] text-stone-500 font-medium tracking-widest uppercase">Tradici√≥n Mexicana</p>
                </div>
            </div>

            <Navbar />
        </div>  
    </header>