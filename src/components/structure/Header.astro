---
import {Image} from 'astro:assets';
import logo from '@/assets/logo-tacoexpress.png';
import Navbar from '@/components/structure/Navbar.tsx';

    const now = new Date();
    const hours = now.getHours();
    const day = new Intl.DateTimeFormat('es-ES', {weekday: 'long' }).format(now);
    let indicador = "cerrado"
    let classIndicador = "bg-red-500 "
    

    if(day == 'lunes' || hours < 14 || hours >= 22){
        classIndicador = "bg-red-500 w-3 h-3 mr-2 animate-pulse rounded-full"
        indicador= 'Cerrado';

    }
    else{
        indicador = "Abierto ahora"
        classIndicador = "bg-green-500 w-3 h-3 mr-2 animate-pulse rounded-full"

    }
    
---

<!-- HEADER -->
<header class="sticky top-0 z-40 bg-white shadow-md border-b border-orange-100">
    <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
        <!-- Logo y Nombre -->
        <div class="flex items-center space-x-3">
            <Image
            src={logo}
            alt="Logo taco express" 
            class="w-15 h-15 object-contain" 
            id="main-logo"
            priority
            />
        <div>
        <h1 class="text-xl font-bold text-orange-900 leading-none">Taco Express</h1>
            <div id="status-indicator" class="flex items-center text-[10px] font-bold uppercase tracking-widest mt-0.5">
                <span class={classIndicador}></span>
                <span>{indicador}</span>
                        
                    
            </div>
        </div>
        </div>
        <Navbar client:only="preact" />
    </div>  
</header>


